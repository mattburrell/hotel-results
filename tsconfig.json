{
  "compilerOptions": {
    "jsx": "react",
    "jsxFactory": "h",
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "module": "esnext",
    "target": "es5",
    "lib": [
      "dom",
      "es6",
      "ES2019"
    ],
    "types": [
      "node",
      "jest"
    ],
  },
  "include": ["src/**/*.tsx", "external.d.ts", "global.d.ts"],
  "exclude": ["dist", "node_modules"]
}